<CustomTreeNode>:
  size: self.width, self.ids.labelName.height+self.ids.labelReturn.height
  BoxLayout:
    orientation: 'vertical'
    Label:
      size: self.texture_size[0], self.texture_size[1]
      text_size: self.width, None
      id: labelName
      text: 'Nombre funcion'
    Label:
      size: self.texture_size[0], self.texture_size[1]
      haling: 'left'
      text_size: self.width, None
      id: labelReturn
      text: 'Valor retornado: '

  BoxLayout:
    BoxLayout:
      orientation: 'vertical'
      Button:
        id: buttonYes
        text: 'yes'
        disabled: True
      Button:
        id: buttonNo
        text: 'no'
        disabled: True

    BoxLayout:
      orientation: 'vertical'
      Button:
        id: buttonTrust
        text: "trust"
        disabled: True
      Button:
        id: buttonUnacceptable
        text: "unacceptable"
        disabled: True
      Button:
        id: buttonDontKnow
        text: "don't know"
        disabled: True

  Label:
    id: labelState
    text: 'estado'


<Menu>:
  canvas:
    Color:
      rgb: 0.4,0.4,0.4
    Rectangle:
      size: self.size
      pos: self.pos
  size_hint: 1,0.2
  GridLayout:
    size_hint: .25,1
    cols: 2
    AnchorLayout:
      anchor_x: 'right'
      Button:
        size_hint: .75,.5
        id: buttonGo
        text: 'Go!'
    AnchorLayout:
      anchor_x: 'right'
      Button:
        size_hint: .75,.5
        id: buttonExit
        text: 'Exit'

  BoxLayout:
    Label:
      text: 'La funcion buggy es: ____'
      color: 1,1,1,1
